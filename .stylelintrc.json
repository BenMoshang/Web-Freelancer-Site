{
	"extends": ["stylelint-config-standard", "stylelint-config-standard-scss"],
	"plugins": ["stylelint-scss", "stylelint-order"],
	"rules": {
		"selector-class-pattern": null,
		"custom-property-pattern": null,
		"keyframes-name-pattern": null,
		"max-nesting-depth": [3, { "ignore": ["blockless-at-rules", "pseudo-classes"] }],
		"declaration-no-important": null,
		"selector-max-compound-selectors": 4,
		"selector-no-qualifying-type": [true, { "ignore": ["attribute", "class"] }],
		"scss/dollar-variable-pattern": null,
		"scss/at-mixin-pattern": null,
		"scss/at-function-pattern": null,
		"scss/percent-placeholder-pattern": null,
		"scss/no-global-function-names": null,
		"property-no-unknown": [
			true,
			{
				"ignoreProperties": ["font-smooth"]
			}
		],
		"selector-pseudo-class-no-unknown": [
			true,
			{
				"ignorePseudoClasses": ["global"]
			}
		],
		"declaration-property-value-no-unknown": [
			true,
			{
				"ignoreProperties": {
					"color": ["get-light-dark", "get-typography-color", "_get-typography-color"],
					"background": ["get-light-dark"],
					"background-color": ["get-light-dark"],
					"fill": ["get-light-dark"],
					"font-family": ["get-ff"],
					"font-size": ["get-responsive-fsz", "get-static-fsz"],
					"font-weight": ["get-fw"],
					"gap": ["get-responsive-sp", "get-static-sp", "get-static-_get-spacing-type"],
					"margin": ["get-static-sp"],
					"margin-block": ["get-static-sp"],
					"margin-block-start": ["get-static-sp"],
					"margin-inline": ["get-static-sp"],
					"padding": ["get-static-sp"],
					"padding-block": ["get-static-sp"],
					"padding-inline": ["get-static-sp"],
					"width": ["get-responsive-fsz"],
					"height": ["get-responsive-fsz"],
					"grid-template-rows": ["auto-fit"],
					"text-transform": ["small-caps"],
					"animation": ["scale-in-tr", "scale-out-tr"],
					"transition": ["transform", "opacity", "backdrop-filter", "background"],
					"border": ["dashed"],
					"border-bottom": ["dashed"],
					"text-wrap": ["none"]
				}
			}
		],
		"order/properties-order": [
			[
				{
					"emptyLineBefore": "never",
					"properties": ["content", "position", "top", "right", "bottom", "left", "z-index"]
				},
				{
					"emptyLineBefore": "always",
					"properties": [
						"inset",
						"inset-block",
						"inset-inline",
						"margin-block",
						"margin-inline",
						"padding-block",
						"padding-inline"
					]
				},
				{
					"emptyLineBefore": "always",
					"properties": [
						"display",
						"flex",
						"flex-direction",
						"flex-wrap",
						"flex-grow",
						"flex-shrink",
						"flex-basis",
						"justify-content",
						"align-items",
						"align-self",
						"grid",
						"grid-template",
						"grid-template-columns",
						"grid-template-rows",
						"grid-column",
						"grid-row",
						"gap"
					]
				},
				{
					"emptyLineBefore": "always",
					"properties": [
						"width",
						"min-width",
						"max-width",
						"inline-size",
						"min-inline-size",
						"max-inline-size",
						"height",
						"min-height",
						"max-height",
						"block-size",
						"min-block-size",
						"max-block-size"
					]
				},
				{
					"emptyLineBefore": "always",
					"properties": [
						"margin",
						"margin-top",
						"margin-right",
						"margin-bottom",
						"margin-left",
						"margin-block",
						"margin-block-start",
						"margin-block-end",
						"margin-inline",
						"margin-inline-start",
						"margin-inline-end",
						"padding",
						"padding-top",
						"padding-right",
						"padding-bottom",
						"padding-left",
						"padding-block",
						"padding-block-start",
						"padding-block-end",
						"padding-inline",
						"padding-inline-start",
						"padding-inline-end"
					]
				},
				{
					"emptyLineBefore": "always",
					"properties": [
						"border",
						"border-radius",
						"background",
						"color",
						"font-family",
						"font-size",
						"font-weight",
						"line-height",
						"text-align",
						"text-decoration",
						"transform",
						"transition",
						"animation"
					]
				}
			],
			{
				"unspecified": "bottomAlphabetical"
			}
		],
		"scss/at-rule-no-unknown": true,
		"scss/selector-no-redundant-nesting-selector": true,
		"color-hex-length": "short",
		"color-named": "never",
		"font-family-name-quotes": "always-where-required",
		"function-url-quotes": "always",
		"declaration-block-no-duplicate-properties": true,
		"no-duplicate-selectors": true,
		"block-no-empty": true,
		"at-rule-no-unknown": null,
		"at-rule-allowed-list": [
			"use",
			"forward",
			"import",
			"mixin",
			"include",
			"function",
			"return",
			"extend",
			"if",
			"else",
			"each",
			"for",
			"media",
			"keyframes",
			"font-face",
			"supports",
			"layer",
			"error",
			"view-transition"
		],
		"indentation": null,
		"declaration-empty-line-before": "never"
	},
	"overrides": [
		{
			"files": ["**/*.scss"],
			"customSyntax": "postcss-scss"
		},
		{
			"files": ["**/*.svelte"],
			"customSyntax": "postcss-html"
		}
	]
}
